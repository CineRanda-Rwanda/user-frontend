VITE_API_BASE_URL=https://api.cineranda.com
VITE_GOOGLE_OAUTH_URL=https://api.cineranda.com/auth/google
VITE_GOOGLE_REDIRECT_URI=https://app.cineranda.com/oauth/google/callback
VITE_PAYMENT_PROVIDER=FLUTTERWAVE
VITE_FLUTTERWAVE_PUBLIC_KEY=FLWPUBK-xxxxxxxxxxxxx
VITE_CDN_URL=https://cdn.cineranda.com

# Optional: Machine-translation fallback for dynamic content that only exists in English.
# Requires a running LibreTranslate instance (self-hosted recommended).
VITE_TRANSLATION_ENABLED=false
VITE_TRANSLATION_PROVIDER=libretranslate
# You can point directly to LibreTranslate (requires CORS), e.g. https://translate.yourdomain.com
# Or (recommended for Vercel) point to the same-origin proxy route provided by this repo:
# VITE_LIBRETRANSLATE_URL=https://<your-vercel-domain>/api/translate
VITE_LIBRETRANSLATE_URL=http://localhost:5001

# Server-side (Vercel): set LIBRETRANSLATE_URL to your LibreTranslate host.
# Example: LIBRETRANSLATE_URL=https://translate.yourdomain.com
VITE_SOCIAL_FACEBOOK_URL=https://www.facebook.com/your-page
